{
  "scopeName": "source.osmia",
  "name": "Osmia",
  "fileTypes": ["osmia"],
  "patterns": [
    {
      "name": "comment.block.osmia",
      "begin": "\\{\\{#",
      "end": "\\}\\}",
      "patterns": [{ "exclude": "#insideExpr" }]
    },
    {
      "name": "keyword.control.osmia",
      "match": "\\{\\{\\s*(if|elseif|while|for|in|return|fn|print)\\b"
    },
    {
      "name": "keyword.control.osmia",
      "match": "\\{\\{(else|fi|done|break|continue)\\}\\}"
    },
    {
      "name": "meta.expression.osmia",
      "begin": "\\{\\{",
      "end": "\\}\\}",
      "patterns": [{ "include": "#insideExpr" }]
    }
  ],
  "repository": {
    "insideExpr": {
      "patterns": [
        {
          "name": "constant.language.boolean.osmia",
          "match": "\\b(true|false)\\b"
        },
        {
          "name": "constant.language.control.osmia",
          "match": "\\b(fn|in)\\b"
        },
        {
          "name": "constant.language.null.osmia",
          "match": "\\bnull\\b"
        },
        {
          "name": "variable.osmia",
          "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b"
        },
        {
          "name": "string.quoted.double.osmia",
          "match": "\"[^\"]*\""
        },
        {
          "name": "string.quoted.single.osmia",
          "match": "'[^']*'"
        },
        {
          "name": "constant.numeric.osmia",
          "match": "\\b\\d+(\\.\\d+)?\\b"
        },
        {
          "name": "keyword.operator.osmia",
          "match": "==|!=|\\|\\||&&|\\+|\\-|\\*|\\/|%|>|<|>=|<=|\\?|:|=|\\.|,|;"
        },
        {
          "name": "meta.brace.round.osmia",
          "begin": "\\(",
          "end": "\\)",
          "beginCaptures": {
            "0": { "name": "punctuation.section.group.begin" }
          },
          "endCaptures": {
            "0": { "name": "punctuation.section.group.end" }
          },
          "contentName": "meta.group.inner.osmia",
          "patterns": [
            { "include": "#insideExpr" }
          ]
        },
        {
          "name": "meta.brace.square.osmia",
          "begin": "\\[",
          "end": "\\]",
          "beginCaptures": {
            "0": { "name": "punctuation.section.list.begin" }
          },
          "endCaptures": {
            "0": { "name": "punctuation.section.list.end" }
          },
          "contentName": "meta.group.inner.osmia",
          "patterns": [
            { "include": "#insideExpr" }
          ]
        },
        {
          "name": "meta.brace.curly.osmia",
          "begin": "\\{",
          "end": "\\}",
          "beginCaptures": {
            "0": { "name": "punctuation.section.block.begin" }
          },
          "endCaptures": {
            "0": { "name": "punctuation.section.block.end" }
          },
          "contentName": "meta.group.inner.osmia",
          "patterns": [
            { "include": "#insideExpr" }
          ]
        }
      ]
    }
  }
}
